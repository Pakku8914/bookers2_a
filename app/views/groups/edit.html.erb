<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>Editing Group</h2>
            <%= form_with model: @update_group, url: user_group_path(current_user.id, @update_group.id), class: "container",local: true do |form| %>
                <%= render 'layouts/errors', obj: @update_group %>
                <div class="form-group">
                    <%= form.label :name, "グループ名", class: "row col" %>
                    <%= form.text_field :name, class: "row col" %>
                </div>
                <div class="form-group">
                    <%= form.label :introduction, "紹介文", class: "row col" %>
                    <%= form.text_area :introduction, class: "row col" %>
                </div>
                <div class="form-group">
                    <%= form.label :image, "グループ画像", class: "row col" %>
                    <%= form.file_field :image, class: "form-controll-file user_image row col", accept: "image/*" %>
                </div>
                <div class="form-group">
                    <%= form.submit "Update Group", class: "btn btn-info"%>
                </div>
            <% end %>
        </div>
    </div>
</div>