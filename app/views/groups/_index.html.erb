<table class='table table-hover table-inverse'>
    <thead>
        <tr>
        <th></th>
        <th>グループ名</th>
        <th>紹介文</th>
        <th>メンバー数</th>
        <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% groups.each do |group| %>
        <tr>
            <td>
            <%= image_tag group.get_group_image(80,80) %>
            </td>
            <td><%= link_to group.name, user_group_path(current_user.id, group.id) %></td>
            <td><%= group.introduction %></td>
            <td><%= group.users.count %></td>
            <td>
                <% if current_user.id == group.owner_id %>
                    <%= link_to "Edit", edit_user_group_path(current_user.id, group.id), class: "btn btn-success" %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>