<h1>ショッピングカート</h1>
<%= link_to "カートを空にする",cart_items_destroy_all_path,method: :delete %>
<table>
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>
  </thead>
  <% @cart_item.each do |cart_item| %>
  <%= @total=@total+cart_item.subtotal %>
  <tr>
  <td><%= cart_item.item.name %></td>
  <td><%= cart_item.item.price * 1.1 %></td>
  <%= form_with model: cart_item, cart_item_path(cart_item.id), method: :patch do |f| %>
  <td><%= f.select :amount, *[1..10] %></td>
  <td><%= f.submit "変更" %></td>
  <% end %>
  <td><%= cart_item.amount %></td>
  <td><%= cart_item.item.price * 1.1 *cart_item.amount %></td>
  <td><%= link_to "削除する",cart_item_path(cart_item.id),method: :delete %></td>
  </tr>
  <% end %>
</table>
<%= button_to "買い物を続ける",root_path,method: :get %>
<tr>
  <td>合計金額</td>
  <td>¥<% @total %></td>
</tr>
<%= button_to "情報入力に進む",new_order_path,method: :get %>