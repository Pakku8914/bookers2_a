<%= form_with url: tags_path, method: :get do |f| %>
  <%= f.text_field :tag %>
  <%= f.submit "タグ検索" %>
<% end %>
<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= link_to "新しい順", books_path(sort: 0), remote: true %>
      |
      <%= link_to "評価の高い順", books_path(sort: 1), remote: true %>
      <div id="index_table">
        <%= render 'index', books: @books%>
      </div>
    </div>
  </div>
</div>